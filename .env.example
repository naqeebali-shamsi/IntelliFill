# Database Configuration
DATABASE_URL=postgresql://intellifill:password@localhost:5432/intellifill
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intellifill
DB_USER=intellifill
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Password Security
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Security Configuration
USE_REFRESH_TOKEN_COOKIE=true
MASTER_API_KEY=your-master-api-key-for-system-access

# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration (for sessions/rate limiting)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
OUTPUT_PATH=./outputs

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration (for verification/password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Monitoring & Analytics
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Docker Configuration
# ===================
# Docker Build Settings
DOCKERFILE=Dockerfile
BUILD_TARGET=development
WEB_DOCKERFILE=Dockerfile
WEB_BUILD_TARGET=development

# Docker Resource Limits
APP_CPU_LIMIT=1
APP_MEMORY_LIMIT=1G
WORKER_CPU_LIMIT=0.5
WORKER_MEMORY_LIMIT=512M
WEB_CPU_LIMIT=0.5
WEB_MEMORY_LIMIT=512M
WORKER_REPLICAS=2

# Docker Port Configuration
DB_PORT=5432
REDIS_PORT=6379
WEB_PORT=3001
WEB_INTERNAL_PORT=5173
DEBUG_PORT=9229
GRAFANA_PORT=3002

# Docker Environment Settings
REDIS_MAX_MEMORY=256mb
WORKER_CMD=npm run dev:worker
VITE_API_URL=http://localhost:3000/api

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Development Tools (docker-compose.override.yml)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# ============================================
# SUPABASE AUTH (Phase 4 - SDK Migration)
# ============================================
# Create a Supabase project at https://app.supabase.com
# Copy these values from: Settings > API
# - SUPABASE_URL: Your project URL
# - SUPABASE_ANON_KEY: Public anon key (safe for frontend)
# - SUPABASE_SERVICE_ROLE_KEY: Admin key (NEVER expose to frontend)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here