FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# The source code will be mounted as volume

# Expose Vite dev server port
EXPOSE 5173

# Enable hot module replacement for all network interfaces
ENV VITE_HOST=0.0.0.0

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]