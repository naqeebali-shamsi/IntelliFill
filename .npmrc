# Cross-platform support for native binaries (sharp, esbuild, rollup, etc.)
# This ensures pnpm-lock.yaml includes binaries for all specified platforms
supportedArchitectures[os][]=current
supportedArchitectures[os][]=linux
supportedArchitectures[cpu][]=x64
supportedArchitectures[libc][]=glibc

# Allow installation even with Node version mismatches (23.x is compatible but not officially listed)
engine-strict=false

# Fail fast on peer dependency conflicts
legacy-peer-deps=false

# Use public npm registry
registry=https://registry.npmjs.org/
