---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://intellifill-web.vercel.app';
---

<Layout title="Contact Us | IntelliFill" description="Get in touch with the IntelliFill team for support, sales, or partnership inquiries.">
  <!-- Header -->
  <header class="bg-slate-900 px-4 py-6 border-b border-slate-800">
    <div class="mx-auto max-w-4xl">
      <a href="/" class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to Home
      </a>
    </div>
  </header>

  <!-- Content -->
  <main class="bg-slate-900 px-4 py-16">
    <div class="mx-auto max-w-2xl text-center">
      <h1 class="text-3xl font-bold text-white sm:text-4xl">Contact Us</h1>
      <p class="mt-4 text-lg text-slate-400">
        Have questions? We're here to help.
      </p>

      <!-- Contact Options -->
      <div class="mt-12 grid gap-8 sm:grid-cols-2">
        <!-- Support -->
        <div class="rounded-2xl border border-slate-700 bg-slate-800/50 p-8">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-primary-500/10">
            <svg class="h-6 w-6 text-primary-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <path d="M12 17h.01"/>
            </svg>
          </div>
          <h2 class="mt-4 text-lg font-semibold text-white">Support</h2>
          <p class="mt-2 text-slate-400">
            Need help with your account or have technical questions?
          </p>
          <a
            href="mailto:support@intellifill.com"
            class="mt-4 inline-flex items-center gap-2 text-primary-400 hover:text-primary-300"
          >
            support@intellifill.com
            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <!-- Sales -->
        <div class="rounded-2xl border border-slate-700 bg-slate-800/50 p-8">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-primary-500/10">
            <svg class="h-6 w-6 text-primary-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
          </div>
          <h2 class="mt-4 text-lg font-semibold text-white">Sales</h2>
          <p class="mt-2 text-slate-400">
            Interested in enterprise plans or custom solutions?
          </p>
          <a
            href="mailto:sales@intellifill.com"
            class="mt-4 inline-flex items-center gap-2 text-primary-400 hover:text-primary-300"
          >
            sales@intellifill.com
            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-12">
        <p class="text-slate-400">
          Already have an account?
        </p>
        <a
          href={`${appUrl}/login`}
          class="mt-2 inline-flex items-center gap-2 text-primary-400 hover:text-primary-300"
        >
          Sign in to your dashboard
          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
