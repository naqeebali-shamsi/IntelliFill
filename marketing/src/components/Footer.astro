---
const currentYear = new Date().getFullYear();
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://intellifill-web.vercel.app';
---

<footer class="bg-slate-900 px-4 py-12">
  <div class="mx-auto max-w-6xl">
    <div class="flex flex-col items-center justify-between gap-8 border-t border-slate-800 pt-8 sm:flex-row">
      <!-- Logo -->
      <div class="flex items-center gap-2">
        <img src="/favicon.svg" alt="IntelliFill" class="h-8 w-8" />
        <span class="text-lg font-semibold text-white">IntelliFill</span>
      </div>

      <!-- Links -->
      <nav class="flex flex-wrap items-center justify-center gap-6 text-sm">
        <a href="/privacy" class="text-slate-400 transition-colors hover:text-white">
          Privacy Policy
        </a>
        <a href="/terms" class="text-slate-400 transition-colors hover:text-white">
          Terms of Service
        </a>
        <a href={`${appUrl}/contact`} class="text-slate-400 transition-colors hover:text-white">
          Contact
        </a>
      </nav>

      <!-- Copyright -->
      <p class="text-sm text-slate-500">
        &copy; {currentYear} IntelliFill. All rights reserved.
      </p>
    </div>
  </div>
</footer>
