---
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://intellifill-web.vercel.app';

const proFeatures = [
  'Unlimited document processing',
  'Client library with search',
  'Form usage analytics',
  'Priority support',
  'API access',
  'Batch processing',
];

const freeFeatures = [
  '10 documents per month',
  'Basic OCR extraction',
  'Standard support',
];
---

<section id="pricing" class="bg-slate-900 px-4 py-20 sm:py-24">
  <div class="mx-auto max-w-5xl">
    <!-- Section header -->
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        Simple, transparent pricing
      </h2>
      <p class="mx-auto mt-4 max-w-xl text-lg text-slate-400">
        Start free, upgrade when you need more. No hidden fees.
      </p>
    </div>

    <!-- Pricing cards -->
    <div class="mt-16 grid gap-8 lg:grid-cols-2">
      <!-- Free tier -->
      <div class="rounded-2xl border border-slate-700 bg-slate-800/50 p-8">
        <h3 class="text-xl font-semibold text-white">Free</h3>
        <p class="mt-2 text-slate-400">Perfect for trying out IntelliFill</p>

        <div class="mt-6">
          <span class="text-4xl font-bold text-white">$0</span>
          <span class="text-slate-400">/month</span>
        </div>

        <ul class="mt-8 space-y-4">
          {freeFeatures.map((feature) => (
            <li class="flex items-center gap-3">
              <svg class="h-5 w-5 flex-shrink-0 text-slate-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span class="text-slate-300">{feature}</span>
            </li>
          ))}
        </ul>

        <a
          href={`${appUrl}/register`}
          class="mt-8 inline-flex h-12 w-full items-center justify-center rounded-lg border border-slate-600 bg-slate-700/50 px-6 text-base font-medium text-white transition-all hover:border-slate-500 hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 focus:ring-offset-slate-900"
        >
          Get Started Free
        </a>
      </div>

      <!-- PRO tier -->
      <div class="relative rounded-2xl border-2 border-primary-500 bg-slate-800 p-8">
        <!-- Popular badge -->
        <div class="absolute -top-4 left-1/2 -translate-x-1/2">
          <span class="inline-flex items-center rounded-full bg-primary-500 px-4 py-1 text-sm font-semibold text-slate-900">
            Most Popular
          </span>
        </div>

        <h3 class="text-xl font-semibold text-white">PRO</h3>
        <p class="mt-2 text-slate-400">For professionals and teams</p>

        <div class="mt-6">
          <span class="text-4xl font-bold text-white">$19</span>
          <span class="text-slate-400">/month</span>
        </div>

        <ul class="mt-8 space-y-4">
          {proFeatures.map((feature) => (
            <li class="flex items-center gap-3">
              <svg class="h-5 w-5 flex-shrink-0 text-primary-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span class="text-slate-300">{feature}</span>
            </li>
          ))}
        </ul>

        <a
          href={`${appUrl}/register`}
          class="mt-8 inline-flex h-12 w-full items-center justify-center rounded-lg bg-primary-500 px-6 text-base font-semibold text-slate-900 shadow-lg shadow-primary-500/25 transition-all hover:bg-primary-400 hover:shadow-xl hover:shadow-primary-500/30 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-slate-900"
        >
          Subscribe to PRO
        </a>
      </div>
    </div>

    <!-- Trust note -->
    <p class="mt-8 text-center text-sm text-slate-500">
      Cancel anytime. Powered by Stripe for secure payments.
    </p>
  </div>
</section>
