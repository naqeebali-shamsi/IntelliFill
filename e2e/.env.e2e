# IntelliFill E2E Test Environment Configuration
#
# This file contains environment variables for E2E tests.
# These are automatically loaded by docker-compose.e2e.yml
# and can be overridden for local development.

# ==================== Service URLs ====================
# URLs for services in Docker network
BASE_URL=http://frontend-test:8080
API_URL=http://backend-test:3002/api

# ==================== Test User Credentials ====================
# These users are created by the database seed script
TEST_USER_EMAIL=test@intellifill.local
TEST_USER_PASSWORD=Test123!@#

TEST_ADMIN_EMAIL=admin@intellifill.local
TEST_ADMIN_PASSWORD=Admin123!@#

# ==================== Test Execution Settings ====================
# Number of parallel workers
WORKERS=4

# Test timeout (milliseconds)
TEST_TIMEOUT=30000

# Expect timeout (milliseconds)
EXPECT_TIMEOUT=5000

# ==================== Playwright Settings ====================
# CI mode (enables stricter checks)
CI=true

# Browser path (set by Playwright Docker image)
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# ==================== Test Artifacts ====================
# Screenshots on test failure
SCREENSHOT_ON_FAILURE=true

# Videos on test failure
VIDEO_ON_FAILURE=true

# Traces on test failure (for debugging)
TRACE_ON_FAILURE=true

# ==================== Database (Internal) ====================
# These are used by backend-test service, not directly by tests
DATABASE_URL=postgresql://intellifill_test:test_password_123@postgres-test:5432/intellifill_test

# ==================== Redis (Internal) ====================
REDIS_URL=redis://redis-test:6379

# ==================== JWT (Internal) ====================
JWT_SECRET=test_jwt_secret_min_32_chars_long_for_testing
JWT_REFRESH_SECRET=test_jwt_refresh_secret_min_32_chars_long_for_testing
