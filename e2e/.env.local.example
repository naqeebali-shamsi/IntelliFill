# Local Development Environment Configuration
#
# Copy this file to .env.local when running tests against local services
# (not in Docker):
#
#   cp .env.local.example .env.local
#
# Then update BASE_URL and API_URL to point to your local development servers.

# ==================== Service URLs (Local) ====================
# Point to locally running services instead of Docker containers
BASE_URL=http://localhost:8080
API_URL=http://localhost:3002/api

# ==================== Test User Credentials ====================
# These should match your local database seed data
TEST_USER_EMAIL=test@intellifill.local
TEST_USER_PASSWORD=Test123!@#

TEST_ADMIN_EMAIL=admin@intellifill.local
TEST_ADMIN_PASSWORD=Admin123!@#

# ==================== Test Execution Settings ====================
# Number of parallel workers (reduce for slower machines)
WORKERS=2

# Test timeout (milliseconds)
TEST_TIMEOUT=30000

# Expect timeout (milliseconds)
EXPECT_TIMEOUT=5000

# ==================== Playwright Settings ====================
# CI mode (set to false for local dev)
CI=false

# ==================== Test Artifacts ====================
# Screenshots on test failure
SCREENSHOT_ON_FAILURE=true

# Videos on test failure (can be slow, consider false for local dev)
VIDEO_ON_FAILURE=false

# Traces on test failure (helpful for debugging)
TRACE_ON_FAILURE=true
