# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for all text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.prisma text eol=lf

# Keep Windows line endings for batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Lock files - keep as-is
package-lock.json text eol=lf
bun.lock text eol=lf
yarn.lock text eol=lf
